<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<div>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> <%= "*" * review.rating %></li>
    <% end %>
  </ul>
</div>

<p><%= link_to "Write a new review for this restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<p><%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %></p>
